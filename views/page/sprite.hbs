{{#extend "head"}}
<link rel="stylesheet" href="/css/highlight/default.css">
<link rel="stylesheet" href="/css/highlight/vs.css"> {{/extend}}
<h3>{{title}} (css/_sprite)</h3>

<h3>sprite 图片列表</h3>
<div id="sprites_list"></div>
<h3>合并图</h3>
<p><img src="/preview/css/img/sprites.png" alt="" id="sprite_img"></p>

<div id="sprite_less">
  <h3>Less文件(./css/_partial/_sprite.less)</h3>
  <p>
    <pre><code class="Less" id="csspre"></code></pre>
  </p>
</div>


<script id="sprites_list_template" type="text/x-handlebars-template">
  \{{#each this}} \{{#if showh}}
  <div class="row">
    \{{/if}}
    <div class="col-md-2">
      <img src="/spritesimg/\{{this.filename}}" alt=""> \{{this.filename}}
      <input class="code icon_code" value="&lt;i class=&quot;icon icon_\{{this.name}}&quot;>&lt;/i>">
    </div>
    \{{#if showb}}
  </div>
  \{{/if}} \{{/each}}
</script>

{{#extend "bodybottom"}}
<script src="/js/highlight.pack.js"></script>
<script src="/js/sprites.js"></script>
{{/extend}}